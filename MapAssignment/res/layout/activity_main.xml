<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="220dip"
        android:layout_height="220dip"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageButton1"
        android:contentDescription="@string/blah"
        android:scaleType="fitXY"
        android:src="@drawable/view_profile" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_marginTop="87dp"
        android:text="@string/viewonmap"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="220dip"
        android:layout_height="220dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="29dp"
        android:background="@drawable/route_icon"
        android:contentDescription="@string/blah"
        android:scaleType="fitXY"
        android:src="@drawable/route_icon" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageButton1"
        android:layout_marginTop="81dp"
        android:layout_toLeftOf="@+id/imageButton1"
        android:text="@string/startprofiler"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>