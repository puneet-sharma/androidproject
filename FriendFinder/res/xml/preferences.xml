<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBoxPreference
        android:key="pref_auto_check_in"
        android:title="@string/pref_auto_check_in"
        android:summary="@string/pref_auto_check_in_summ"
        android:defaultValue="false" />
    
    <ListPreference
        android:defaultValue="5"
        android:entries="@array/pref_sync_frequency_titles"
        android:entryValues="@array/pref_sync_frequency_values"
        android:key="sync_frequency"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_sync_frequency" />
    
    <CheckBoxPreference
        android:key="pref_auto_refresh"
        android:title="@string/pref_auto_refresh"
        android:summary="@string/pref_auto_refresh_summ"
        android:defaultValue="false" />
    
    <ListPreference
        android:defaultValue="5"
        android:entries="@array/pref_refresh_frequency_titles"
        android:entryValues="@array/pref_refresh_frequency_values"
        android:key="refresh_frequency"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_refresh_frequency" />

</PreferenceScreen>